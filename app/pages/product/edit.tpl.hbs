<span class="hide {{id}}-i18n" data-key="serviceHasBeenSavedSuccessfully">{{$ serviceHasBeenSavedSuccessfully}}</span>
<span class="hide {{id}}-i18n" data-key="serviceSaveFailed">{{$ serviceSaveFailed}}</span>
<span class="hide {{id}}-i18n" data-key="serviceHasBeenDeletedSuccessfully">{{$ serviceHasBeenDeletedSuccessfully}}</span>
<span class="hide {{id}}-i18n" data-key="serviceDeleteFailed">{{$ serviceDeleteFailed}}</span>

<div class="page-header">
    <div class="pull-right">
        <button class="btn btn-default" id="{{id}}-back"><i class="fa fa-arrow-circle-left"></i> {{$ goBack}}</button>
    </div>
    <h3>{{#if product.id}}{{$ editService}}{{else}}{{$ newService}}{{/if}}</h3>
</div>

<div class="form-group">
    <label class="control-label" for="{{id}}-name">{{$ serviceCategoryName}}
    </label>
    <input type="text" class="form-control input-lg {{id}}-field" id="{{id}}-category-name" disabled
           value="{{category.name}}"/>
</div>

<div class="form-group">
    <label class="control-label" for="{{id}}-name">{{$ name}}
    </label>
    <input type="text" class="form-control input-lg {{id}}-field" id="{{id}}-name"
           value="{{product.name}}"/>
</div>


<div class="form-group clearfix">
    <label class="control-label" for="{{id}}-name">{{$ price}}
    </label>
    <div class="row">
        <div class="col-xs-11">
            <input type="number" class="form-control input-lg {{id}}-field"
               id="{{id}}-price"
               data-bts-postfix="$"
               data-bts-button-down-class="btn btn-warning"
               data-bts-button-up-class="btn btn-success"
               value="{{product.price}}"/>
       </div>
   </div>
</div>

<div class="form-group">
    <div class="checkbox">
        <label>
            <input class="{{id}}-field" id="{{id}}-is-active" type="checkbox" {{#if product.isActive}}checked{{/if}}> {{$ active}}?
        </label>
    </div>
</div>


<div class="page-footer">
    <button type="button" id="{{id}}-save" class="btn btn-primary btn-lg btn-block"><i class="fa fa-save"></i> {{$ save}}</button>
    {{#if product.id}}
    <button type="button" id="{{id}}-delete" class="btn btn-warning btn-block"><i class="fa fa-trash-o"></i> <span
            class="bcb-label">{{$ delete}}</span></button>
    {{/if}}
</div>